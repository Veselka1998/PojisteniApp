@model PojisteniApp.Models.Insurance

@{
    ViewData["Title"] = "Smazat pojištění";
}

<h2 style="margin-block: 2rem">
    Jseš si jistý, že chceš smazat
    <strong>@Html.DisplayFor(model => model.Name)?</strong>
</h2>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Pojištění
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Předmět pojištění
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceObject)
        </dd>
        <dt class = "col-sm-2">
            Částka
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price) Kč
        </dd>
        <dt class = "col-sm-2">
            Platnost od
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EffectiveDate)
        </dd>
        <dt class = "col-sm-2">
            Platnost do
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class = "col-sm-2">
            Pojištěnec
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Policyholder.FirstName)
            @Html.DisplayFor(model => model.Policyholder.LastName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Smazat" class="btn btn-danger" />
    </form>
</div>
